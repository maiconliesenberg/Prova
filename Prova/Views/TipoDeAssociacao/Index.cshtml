@model IEnumerable<Prova.Models.TipoDeAssociacao>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Tipos de Associação</h2>

@if (@Model.Count() > 0)
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Mensalidade</th>
                <th>periodo</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var associacao in Model)
            {
                <tr>
                    <td>@Html.ActionLink(@associacao.Nome, "Detalhes", new { associacao.Id })</td>
                    <td>@associacao.Mensalidade</td>
                    <td>@associacao.periodo</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Não tem cliente ainda!</p>
}
